<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple4"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple1"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/topicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Selected Topic Name"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="600dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/timer" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="630dp"
            android:layout_marginTop="20dp"
            android:text="00:59"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#faa72f" />

    </RelativeLayout>

    <TextView
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_bg"
        android:elevation="1dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="1/10"
        android:textSize="10sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/purple1_bg"
        android:gravity="center"
        android:minHeight="100dp"
        android:text="question here"
        android:fontFamily="@font/poppins_bold"
        android:padding="15dp"
        android:textColor="@color/purple4"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/option1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="option 1"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/purple1"
        android:background="@drawable/white_bg_stroke2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/option2"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:text="option 2"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/purple1"
        android:background="@drawable/white_bg_stroke2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/option3"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:text="option 3"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/purple1"
        android:background="@drawable/white_bg_stroke2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/nextBtn"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="Next"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/orange_bg"/>

</LinearLayout>